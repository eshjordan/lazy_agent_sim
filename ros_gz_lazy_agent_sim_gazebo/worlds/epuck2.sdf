<?xml version="1.0"?>
<!--
  Try sending commands:
    gz topic -t "/model/epuck2/cmd_vel" -m gz.msgs.Twist -p "linear: {x: 1.0}, angular: {z: -0.1}"
    ros2 topic pub /epuck2/cmd_vel geometry_msgs/msg/Twist "{linear: {x: 5.0, y: 0.0, z: 0.0}, angular:
{x: 0.0, y: 0.0, z: -0.1}}"
  Listen to odometry:
    gz topic -e -t /model/epuck2/odometry
    ros2 topic echo /model/epuck2/odometry
-->
<sdf version="1.12">
  <world name="arena">
    <plugin
      filename="gz-sim-physics-system"
      name="gz::sim::systems::Physics">
    </plugin>
    <plugin
      filename="gz-sim-sensors-system"
      name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin filename="gz-sim-imu-system"
      name="gz::sim::systems::Imu">
    </plugin>
    <plugin
      filename="gz-sim-scene-broadcaster-system"
      name="gz::sim::systems::SceneBroadcaster">
    </plugin>
    <plugin
      filename="gz-sim-user-commands-system"
      name="gz::sim::systems::UserCommands">
    </plugin>
    <plugin
      filename="gz-sim-rf-comms-system"
      name="gz::sim::systems::RFComms">
      <range_config>
        <max_range>20.0</max_range>
        <fading_exponent>2.6</fading_exponent>
        <l0>40</l0>
        <sigma>10.0</sigma>
      </range_config>
      <radio_config>
        <capacity>1000000</capacity>
        <tx_power>20</tx_power>
        <noise_floor>-90</noise_floor>
        <modulation>QPSK</modulation>
      </radio_config>
    </plugin>
    <plugin
      filename="BasicSystem"
      name="ros_gz_lazy_agent_sim_gazebo::BasicSystem">
    </plugin>
    <plugin
      filename="FullSystem"
      name="ros_gz_lazy_agent_sim_gazebo::FullSystem">
    </plugin>

    <light name="sun" type="directional">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
      </link>
    </model>


    <frame name='epuck2_robot_0/odom'>
      <pose>-0.1 -0.1 0.001 0 0 0</pose>
    </frame>

    <model name="epuck2_robot_0_fixed">
      <pose relative_to='epuck2_robot_0/odom'>0 0 0 0 0 0</pose>
      <static>true</static>
      <plugin
        filename="gz-sim-odometry-publisher-system"
        name="gz::sim::systems::OdometryPublisher">
        <odom_frame>arena</odom_frame>
        <robot_base_frame>epuck2_robot_0/odom</robot_base_frame>
        <odom_publish_frequency>60</odom_publish_frequency>
        <tf_topic>/model/epuck2_robot_0/tf</tf_topic>
      </plugin>
    </model>

    <model name="epuck2_robot_0">
      <self_collide>false</self_collide>
      <pose relative_to='epuck2_robot_0/odom'>0 0 0 0 0 0</pose>

      <include merge="true">
        <uri>package://ros_gz_lazy_agent_sim_description/models/epuck2</uri>
      </include>

      <!-- Differential drive controller plugin -->
      <plugin
        filename="gz-sim-diff-drive-system"
        name="gz::sim::systems::DiffDrive">
        <left_joint>base_link_left_wheel</left_joint>
        <right_joint>base_link_right_wheel</right_joint>
        <wheel_separation>0.052</wheel_separation>
        <wheel_radius>0.02</wheel_radius>
        <child_frame_id>epuck2_robot_0/odom/base_link</child_frame_id>
        <odom_publish_frequency>60</odom_publish_frequency>
        <topic>/model/epuck2_robot_0/cmd_vel</topic>
      </plugin>

      <!-- State-related plugins and topics -->
      <plugin
        filename="gz-sim-joint-state-publisher-system"
        name="gz::sim::systems::JointStatePublisher">
      </plugin>

      <plugin
        filename="gz-sim-pose-publisher-system"
        name="gz::sim::systems::PosePublisher">
        <publish_link_pose>true</publish_link_pose>
        <publish_sensor_pose>true</publish_sensor_pose>
        <publish_model_pose>true</publish_model_pose>
        <publish_nested_model_pose>true</publish_nested_model_pose>
        <use_pose_vector_msg>true</use_pose_vector_msg>
        <update_frequency>60</update_frequency>
        <static_publisher>true</static_publisher>
        <static_update_frequency>60</static_update_frequency>
      </plugin>

      <!-- RF Comms -->
      <plugin
        filename="gz-sim-comms-endpoint-system"
        name="gz::sim::systems::CommsEndpoint">
        <address>aa:bb:cc:dd:ee:00</address>
        <topic>aa:bb:cc:dd:ee:00/rx</topic>
        <broker>
          <bind_service>/broker/bind</bind_service>
          <unbind_service>/broker/unbind</unbind_service>
        </broker>
      </plugin>

    </model>


    <frame name='epuck2_robot_1/odom'>
      <pose>0.1 -0.1 0.001 0 0 0</pose>
    </frame>

    <model name="epuck2_robot_1_fixed">
